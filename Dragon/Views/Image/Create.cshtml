
@model Dragon.Models.Image


@{ var sup = ViewBag.Supplier;}
<h2>Add Photo</h2>


@using (Html.BeginForm("Create", "Image", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Image</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


        <div class="form-group">
            @Html.HiddenFor(model=>model.ImageID)

            @Html.LabelFor(model => model.ImageContent, "Insert image from computer", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBox("imageFile", "", new { @class = "form-control", type = "file" })

                @Html.Label("Do you want it to background image of the supplier?", htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.CheckBox("backImg", false)

                @Html.ValidationMessageFor(model => model.ImageContent, "", new { @class = "text-danger" })
            </div>
        </div>



        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Details", "Supplier", new { id = sup.SupplierID }, null)
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}